<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lato.roskaroope"
    android:versionCode="1"
    android:versionName="1.0" >

    <permission
            android:name="com.lato.leikkimaan.permission.MAPS_RECEIVE"
            android:protectionLevel="signature" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <uses-library
                android:name="com.google.android.maps"
                android:required="true" />

        <activity
            android:name="com.lato.roskaroope.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CameraActivity"/>
        <activity android:name=".TrashMapActivity"/>
        <activity android:name=".ScoreActivity"/>

        <meta-data
                android:name="com.google.android.maps.v2.API_KEY"
                android:value="AIzaSyCuT-TXGOGAB8MYsWNCUSEcpudqQps2pzQ" />
    </application>

</manifest>
